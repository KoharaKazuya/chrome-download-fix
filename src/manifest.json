{
  "manifest_version": 2,
  "name": "Chrome Download Fix",
  "version": "0.1.0",
  "icons": { "128": "icons/logo128.png" },
  "permissions": ["downloads", "downloads.shelf", "notifications", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "name": "Open Downloads Page"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  }
}
